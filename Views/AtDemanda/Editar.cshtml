@model sistemanovo.Models.ViewModels.CadastroDemandaViewModel
@{
    ViewData["Title"] = "Atendimento - Editar";
}

<div class="container p-5">
    <form class="col-8 mx-auto p-5 border rounded-1 shadow" method="POST" asp-action="Editar">
        <input type="hidden" asp-for="Demandas.IdAtDemanda">

        <p class="mb-3"><label  asp-for="Demandas.DataHora" class="form-label">Data / Hora abertura: </label>
        <input asp-for="Demandas.DataHora" class="form-control" readonly></p>
        
        <p class="mb-3"><label asp-for="Demandas.IdUsuario" class="form-label">Usu√°rio: </label>
        <input asp-for="Demandas.IdUsuario" class="form-control" readonly></p>
 
        <p class="mb-3"><label asp-for="Demandas.Reclamante" class="form-label">Reclamante: </label>
        <input asp-for="Demandas.Reclamante" class="form-control"></p>
   
        <p class="mb-3"><label asp-for="Demandas.Telefone" class="form-label">Telefone: </label>
        <input asp-for="Demandas.Telefone" class="form-control"></p>
   
        <p class="mb-3"><label asp-for="Demandas.IdAssunto" class="form-label">Assunto: </label>
        <input asp-for="Demandas.IdAssunto" class="form-control"></p>
   
        <p class="mb-3"><label asp-for="Demandas.Observacao" class="form-label">Observacao: </label>
        <input asp-for="Demandas.Observacao" class="form-control"></p>
        

        <p>
            <input type="submit" class="btn btn-primary" value="Atualizar">
            <a class="btn btn-primary" href="/AtDemanda/Lista">Voltar</a>
        </p>

    </form>
</div>
<p>
    @ViewBag.Mensagem
</p>