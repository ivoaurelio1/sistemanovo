@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script> *@

    <title>@ViewData["Title"] - sistemanovo</title>


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/estilo.css" />

@* 
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/sistemanovo.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="/style.css" asp-append-version="true" /> *@


</head>

<body class="corpo">
    <header class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3">
        <nav class="container-fluid">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Sistemanovo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (Context.Session.GetInt32("id_usuario") == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-Light" asp-area="" asp-controller="Usuarios"
                                    asp-action="Login">Entrar</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home"
                                    asp-action="Privacy">Privacy</a>
                            </li>

                            // Usuários -----------
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Usuarios"
                                    asp-action="Cadastro">Página de Cadastro</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-Light" asp-area="" asp-controller="Usuarios"
                                    asp-action="Lista">Lista de Usuários</a>
                            </li>

                            // Assunto -----------
                            <li class="nav-item">
                                <a class="nav-link text-Light" asp-area="" asp-controller="AtAssunto"
                                    asp-action="Cadastro">Cadastro de Assunto</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-Light" asp-area="" asp-controller="AtAssunto"
                                    asp-action="Lista">Lista de Assuntos</a>
                            </li>

                            // Demandas -----------
                            <li class="nav-item">
                                <a class="nav-link text-Light" asp-area="" asp-controller="AtDemanda"
                                    asp-action="Cadastro">Cadastrar Demanda</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-Light" asp-area="" asp-controller="AtDemanda"
                                    asp-action="Lista">Lista de Demandas</a>
                            </li>

                            // Deslogar -----------
                            <li class="nav-item">
                                <a class="nav-link text-Light" asp-area="" asp-controller="Usuarios"
                                    asp-action="Logout">Sair</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - sistemanovo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>